<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.kananga.miniproject.ui.ChangeLibraryActivity">

    <include layout="@layout/app_bar_layout" />

    <TextView
        android:id="@+id/libraryServerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server adress"
        android:layout_below="@+id/libraryServerText"
        android:layout_alignLeft="@+id/libraryServerText"
        android:layout_alignStart="@+id/libraryServerText" />

    <EditText
        android:id="@+id/libraryServerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="library server adress"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/libraryServerLabel" />

</LinearLayout>
