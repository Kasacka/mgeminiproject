<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Miniprojekt_WPF">

    <Style x:Key="inputRow" TargetType="{x:Type StackPanel}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style x:Key="inputButtonRow" TargetType="{x:Type StackPanel}">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="FlowDirection" Value="RightToLeft" />
    </Style>

    <Style x:Key="labelForInput" TargetType="{x:Type Label}">
        <Setter Property="Width" Value="150" />
    </Style>

    <Style x:Key="input" TargetType="{x:Type TextBox}">
        <Setter Property="Width" Value="135" />
    </Style>

</ResourceDictionary>