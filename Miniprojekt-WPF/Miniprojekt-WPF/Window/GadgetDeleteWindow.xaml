<Window x:Class="Miniprojekt_WPF.GadgetDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miniprojekt_WPF"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Delete Gadget" ResizeMode="NoResize" Height="160" Width="300">
    <Window.Resources>
        <ResourceDictionary Source="../Style/ButtonStyles.xaml" />
    </Window.Resources>
    <Grid>
        <Label Content="Are you sure that you want to delete this gadget?" />
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Click="NoClicked">
                <fa:FontAwesome Icon="Ban" />
            </Button>
            <Button Click="YesClicked">
                <fa:FontAwesome Icon="Check" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
