<Window x:Class="Miniprojekt_WPF.GadgetDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miniprojekt_WPF"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Delete Gadget" ResizeMode="NoResize" Height="133.231" Width="300">
    <Window.Resources>
        <ResourceDictionary Source="ButtonStyles.xaml" />
    </Window.Resources>
    <Grid>
        <Label Content="Are you sure that you want to delete this gadget?" />
        <Label />
        <Button Click="YesClicked" Margin="191,58,10,10">
            <fa:FontAwesome Icon="Ban" />
        </Button>
        <Button Click="NoClicked" Margin="95,58,106,10">
            <fa:FontAwesome Icon="Check" />
        </Button>
    </Grid>
</Window>
