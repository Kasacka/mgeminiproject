<Window x:Class="Miniprojekt_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miniprojekt_WPF"
        mc:Ignorable="d"
        Title="Gadgetothek" Height="350" Width="525">
    <Grid>
        <TabControl Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Gadgets">
                <Grid Background="#FFE5E5E5" Name="GadgetContent" />
            </TabItem>
            <TabItem Header="Loans">
                <Grid Background="#FFE5E5E5">
                    <local:LoanListView />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
