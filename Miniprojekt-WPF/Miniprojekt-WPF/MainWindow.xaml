<Window x:Class="Miniprojekt_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Miniprojekt_WPF"
        mc:Ignorable="d"
        Title="Gadgetothek" Height="400" Width="750">

    <Window.Resources>
        <ResourceDictionary Source="TabControlStyles.xaml"/>
    </Window.Resources>

    <Grid>
        <TabControl>
            <TabItem Header="Gadgets">
                <Grid Background="#FFE5E5E5" Name="GadgetContent" />
            </TabItem>
            <TabItem Header="Loans">
                <Grid>
                    <local:LoanListView />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
